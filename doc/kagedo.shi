let true = 1=1;
let false = 1/=1;
let is_zero = \(n){
    return n = 0;
};
let plus = \(a,b){
    if a = 0 then{
        return b;
    }else{
        return plus(a-1,b) + 1;
    }
};

let pow = \(x,n){
    if n = 0 then{
        return 1;
    }else{
        let r = pow(x*x,n/2);
        if n % 2 = 1 then{
            return r * x;
        }else{
            return r;
        }
    }
};
